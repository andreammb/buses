@{
    ViewData["Title"] = "Buses";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Buses</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Agregar nuevo bus</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblBuses" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Horario</th>
                <th>Asientos Reservados</th>
                <th>Ruta </th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/bus.js"></script>
}