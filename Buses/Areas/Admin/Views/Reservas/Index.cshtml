@{
    ViewData["Title"] = "Reservas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Reservas</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Crear reserva</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblReservas" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Asientos Reservados</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Precio</th>
                <th>Pago</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/reserva.js"></script>
}