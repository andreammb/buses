@{
    ViewData["Title"] = "Rutas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Rutas</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Crear nueva ruta</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblRutas" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Origen</th>
                <th>Destino</th>
                <th>Buses Disponibles</th>
                <th>Horarios</th>
                <th>Precio</th>
                <th>Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/ruta.js"></script>
}