@{
    ViewData["Title"] = "Promociones";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Promociones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>Crear promoción</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Slider.js"></script>
}